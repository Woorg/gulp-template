{
  "name": "gulp-template",
  "version": "1.0.0",
  "description": "Gulp сборка для продуктивной верстки.",
  "scripts": {
    "prepare": "husky install",
    "modernizr": "gulp modernizr",
    "proxy": "gulp proxy",
    "dev": "gulp",
    "build": "gulp build --production",
    "editor-check": "editorconfig-checker --exclude '.git|node_modules|.husky|build|modernizr.js'",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:pug": "pug-lint ./src/markup/**/*.pug",
    "lint:style": "stylelint ./src/styles/**/*.{scss,sass} --fix"
  },
  "keywords": [
    "gulp",
    "webpack",
    "pug"
  ],
  "author": "Sergio Eliofery",
  "license": "MIT",
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@csstools/postcss-media-minmax": "^3.0.0",
    "@eslint/js": "^10.0.1",
    "@typescript-eslint/parser": "^8.55.0",
    "autoprefixer": "^10.4.24",
    "babel-loader": "^10.0.0",
    "browser-sync": "^3.0.4",
    "cssnano": "^7.1.2",
    "editorconfig-checker": "6.1.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "files-exist": "^1.1.0",
    "globals": "^17.3.0",
    "gulp": "^5.0.1",
    "gulp-avif": "^1.1.1",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^3.0.0",
    "gulp-image-resize": "^0.13.1",
    "gulp-imagemin": "^9.2.0",
    "gulp-newer": "^1.4.0",
    "gulp-notify": "^5.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^10.0.0",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.1.0",
    "gulp-replace": "^1.1.4",
    "gulp-sass": "^6.0.1",
    "gulp-sass-glob": "^1.1.0",
    "gulp-strip-comments": "^2.6.0",
    "gulp-svg-symbol-view": "^1.0.3",
    "gulp-svg2png": "^2.0.2",
    "gulp-to-ico": "^1.0.0",
    "gulp-webp": "^5.1.0",
    "husky": ">=9.1.7",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "jstransformer": "^1.0.0",
    "jstransformer-clean-css": "^2.1.0",
    "jstransformer-highlight": "^2.0.0",
    "jstransformer-markdown-it": "^3.0.0",
    "jstransformer-scss": "^2.0.0",
    "lint-staged": ">=16.2.7",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-kbd": "^3.0.2",
    "merge-stream": "^2.0.0",
    "modernizr": "^3.13.1",
    "postcss": "^8.5.6",
    "postcss-custom-media": "^12.0.0",
    "postcss-discard-comments": "^7.0.5",
    "postcss-import": "^16.1.1",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.8.1",
    "pug-include-glob": "^0.4.3",
    "pug-lint": "^2.7.0",
    "sass": "^1.97.3",
    "sharp": "^0.34.5",
    "stylelint": "^17.2.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-order": "^7.0.1",
    "stylelint-scss": "^7.0.0",
    "terser-webpack-plugin": "^5.3.16",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "uglify-js": "^3.19.3",
    "vinyl-named-with-path": "^1.0.0",
    "webpack": "^5.105.2",
    "webpack-stream": "^7.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0",
    "highlight.js": "^11.11.1",
    "imask": "^7.6.1",
    "normalize.css": "^8.0.1"
  },
  "lint-staged": {
    "*": [
      "npm run format",
      "npm run editor-check"
    ],
    "*.pug": "npm run lint:pug",
    "*.{scss,sass}": "npm run lint:style",
    "*.ts": "bash -c tsc --noEmit",
    "*.{js,ts}": "npm run lint"
  }
}
